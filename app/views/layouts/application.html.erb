<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "TV Tracker" %></title>
    <%= stylesheet_link_tag "application" %>

    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>	
	<style>a{text-decoration:none;padding:3px}</style>
	<% unless production? %>
		<%= render :partial => '/home/dev_menu' %>
	<% end %>
<br/> 
	<div id="header">
	</div>

	<div id="menu_left_edge">
	</div>
	<div id="mainmenubar_center">
	&nbsp;&nbsp;&nbsp;&nbsp;
		<%= link_to image_tag("/images/home2.gif", :height=>'53px',:alt => "Home") %>
		&nbsp;&nbsp;&nbsp;
		<%= link_to image_tag("/images/list.gif", :height=>'50px',:alt => "All Series"),"/series_items" %>
		
	&nbsp;&nbsp;&nbsp;&nbsp;
		<%= link_to image_tag("/images/Find.png", :height=>'50px',:alt => "Search"),"#" %>
		&nbsp;&nbsp;&nbsp;
		<%= link_to image_tag("/images/Calendar.png", :height=>'50px',:alt => "Calender"),"#" %>
		<br /><br />
	</div>
		
   <div id="login_menu" >
		<div id="sign_in_wrapper">
					<table id="sign_in">
						<tr>
							<td id="sign_in_left"></td>
							<td id="sign_in_middle">					
								<% if logged_in? -%>
								Welcome <%= current_user.username %>  | 
								<%= link_to "Log out", logout_path%>
							    <% else -%>
									<%= form_tag sessions_path do -%>
							        <%= label_tag :login, "Username"  %>
							        <%= text_field_tag :login, params[:login] %>
							        <%= label_tag :password %>
									<%= password_field_tag :password %>
									<%= submit_tag "Log in" %>
							        <%= link_to 'Register', signup_path %>
									<% end -%>
								<% end -%>
							</td>
							<td id="sign_in_right"></td>
						</tr>
					</table>
			</div>	
		</div>      
   
   <div id="menu_right_edge">
   </div>
   
   <div style="clear:both;"></div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
  </body>
</html>
