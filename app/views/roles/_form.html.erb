<%= form_for @role do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :series_item_id %><br />
	<%= f.collection_select :series_item_id,SeriesItem.all, :id, :to_s %>  </p>
  <p>
    <%= f.label :actor_id %><br />
    <%= f.collection_select :actor_id,Actor.all, :id, :to_s %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :character_name %><br />
    <%= f.text_field :character_name %>
  </p>
  <p><%= f.submit %></p>
<% end %>
