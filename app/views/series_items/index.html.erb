<div id="container">
<table style="padding:5px;">	
  <tr style="padding:10px">	
    <th style="text-align:left; font-size: 14pt;">Name</th>
    <th style="text-align:left; font-size: 14pt;">Description</th>
  </tr>
  <% for series_item in @series_items %>
    <tr>
	
	
      <td width="20%"><%= link_to series_item.name,series_item %></td>
      <td width="70%"><%= series_item.description %></td>
		<% if logged_in? %>
			<% list_item = current_user.list_items.select{|li| li.series_item_id == series_item.id}.first %> 
			<% if list_item.nil? %>
				<td width="10%" style="text-align:right"><%= link_to "Follow!", {:controller => "list_items", :action => "create","list_item[series_item_id]"=>series_item.id}, :method=>:post  %></td>
			<% else %>
				<td width="10%" style="text-align:right"><%= link_to "Unfollow", list_item, :method => :delete %></li>
			<% end %>
		<% end %>	
    </tr>
  <% end %>
</table>
</div>

