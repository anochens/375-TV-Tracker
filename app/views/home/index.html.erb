

<div id="title_bar_left"></div>

<div id="title_bar_center">
<table width="100%" height="100%">
<tr width="100%">
<td valign="bottom" width="55%">
<h3>Your Show Updates</h3>
</td>
<td valign="center" width="45%">
<h3>Sort by</h3>
</td>
</table>
</div>
<div id="title_bar_right"></div>

<div style="clear:both;"></div>

<div id="container">


<% if logged_in? %>
   <% if current_user.list_items.size == 0 %>
      You do not follow any shows, yet.
   <% else %>
    <div id="main_separator_left"> </div> 
	<div id="main_separator_center">
      <h3>A</h3>
	</div>
	<div id="main_separator_right"></div>
	<div style="clear:both;"></div>
	
      <table>
      <% for list_item in current_user.list_items %>
         <%= render :partial => "/list_items/field", :locals => {:list_item => list_item} %>
        <table>
        <% for episode in list_item.series_item.unseen_episodes(current_user.id) %>
          <tr>
             <%= render :partial => "/episodes/episode_row", :locals => {:episode => episode, :min => true} %>

          </tr>
        <% end %> 
        </table>  
      <% end %>

      </table>
   <% end %>   
   <br/><br/>
<% else %>
   <%= link_to "Sign up", signup_path %> or
   <%= link_to "Log in", login_path %>.
<% end %> 

</div>