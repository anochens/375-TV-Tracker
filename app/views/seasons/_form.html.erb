<%= form_for @season do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Series" %>
    <%= f.collection_select :series_item_id,SeriesItem.all, :id,:to_s %>
  </p>
  <p>
    <%= f.label :season_number %>
    <%= f.text_field :season_number,:size => 5 %>
  </p>
  <p>
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :end_date %>
    <%= f.date_select :end_date, :include_blank=>true %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit %></p>
<% end %>
